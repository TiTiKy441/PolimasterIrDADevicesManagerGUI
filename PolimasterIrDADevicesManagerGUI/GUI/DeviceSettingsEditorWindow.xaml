<Window x:Class="PolimasterIrDADevicesManagerGUI.GUI.DeviceSettingsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolimasterIrDADevicesManagerGUI.GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Settings editor" Height="596" Width="365">
    <Grid>
        <ScrollViewer x:Name="parameters_scrollviewer" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="350" Height="478" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.152"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.531"/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <StackPanel x:Name="parameters_stackpanel">

            </StackPanel>
        </ScrollViewer>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="79" Width="352" Margin="0,0,0,0">
            <Grid>
                <Button x:Name="fetch_all_button" Content="Fetch all" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Click="fetch_all_button_Click" Height="23" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button x:Name="save_to_device_button" Content="Save to device" HorizontalAlignment="Left" Margin="182,10,0,0" VerticalAlignment="Top" Width="156" Click="save_to_device_button_Click" Height="23"/>
                <Label Content="Running tasks:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="4,33,0,0" VerticalAlignment="Top" Height="23" FontSize="10" Width="76"/>
                <Label Content="Completed successfully:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="4,45,0,0" VerticalAlignment="Top" FontSize="10" Height="24"/>
                <Label Content="Failed:" HorizontalAlignment="Left" Margin="4,57,0,0" VerticalAlignment="Top" FontSize="10" Height="21"/>
                <Label x:Name="running_tasks_label" Content="0" HorizontalAlignment="Left" Margin="144,32,0,0" VerticalAlignment="Top" FontSize="10" Height="22"/>
                <Label x:Name="successfull_tasks_label" Content="0" HorizontalAlignment="Left" Margin="144,44,0,0" VerticalAlignment="Top" FontSize="10" Height="24"/>
                <Label x:Name="failed_tasks_label" Content="0" HorizontalAlignment="Left" Margin="144,56,0,0" VerticalAlignment="Top" FontSize="10" Height="22"/>
                <Button x:Name="cancel_tasks_button" Content="Cancel all running tasks" HorizontalAlignment="Left" Margin="182,43,0,0" VerticalAlignment="Top" Height="23" Click="cancel_tasks_button_Click" Width="156"/>
            </Grid>
        </Border>
    </Grid>
</Window>
